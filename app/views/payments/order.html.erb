<h1>order</h1>
<%= form_tag(controller: "payments" ,action: "afterPay", method: "post") do %>
    <%= image_tag (cookies['image_user_token']+".png") %>
    <label>Цена : </label>
    <%= text_field_tag 'cost', '1000', :readonly => true %>
    <label>*</label>
    <%= number_field_tag 'count', '1', in: 1...100 %>
    <label>=</label>
    <%= text_field_tag 'finalCost', '1000', :readonly => true %>
    <!--<%=label(:cost, :title1, "1000", id: "finalCost")%>-->
    <br/>
    <%= label_tag(:fio, "Фамилия Имя") %>
    <%= text_field_tag(:fio) %>
    <%= label_tag(:phone, "Телефон") %>
    <%= text_field_tag(:phone) %>
    <%= label_tag(:email, "Email") %>
    <%= text_field_tag(:email) %>
    <%= label_tag(:address, "Адрес доставки") %>
    <%= text_field_tag(:address) %>
    <%= label_tag(:post, "Почтовый индекс") %>
    <%= text_field_tag(:post) %>
    <%= label_tag(:comment, "Комментарий") %>
    <%= text_field_tag(:comment) %>
    <%= submit_tag("Оплатить") %>
<% end %>